#}

bar {
        position top
        status_command ~/.i3/conky
        colors { 
                statusline #AAAAAA
                background #1e160b
                focused_workspace #333333 #333333 #FFFFFF
                inactive_workspace #484848 #484848 #AAAAAA
        }
}

exec --no-startup-id /bin/sh ~/.fehbg

gaps inner 8
gaps outer 4
smart_gaps on
for_window [class="^.*"] border pixel 1
